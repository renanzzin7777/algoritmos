programa {
  funcao inicio() {
    
//Declaração
real n1, n2, sm, sb, m, d

  //Entrada 
  escreva("Digite o número:", n1)
  leia(n1)
  escreva("Digite o número: ", n2)
  leia(n2)

  //Processamento 
  sm = n1 + n2
  sb = n1 - n2
  m = n1 * n2 
  d = n1 / n2 

  //Saída 
  escreva("A soma é: ", sm, ", ")
  escreva("A subtração é: ", sb, ", ")
  escreva("A multiplicação é: ", m, ", ")
  escreva("A divisão é: ", d, ", ")

    }
  }
