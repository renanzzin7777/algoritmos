programa {
  funcao inicio() {
    
    //Declaração de variáveis 
    inteiro v1, v2, v3, v4
    real media

    //Entrada
    escreva("Digite o primeiro valor: ")
    leia (v1)
    escreva("Digite o segundo valor: ")
    leia (v2)
    escreva("Digite o terceiro valor: ")
    leia (v3)
    escreva("Digite o quarto valor: ")
    leia (v4)

    //Processamento
    media = (v1+v2+v3+v4)/4

    //Saída
    escreva("A media é: ", media)

  }
}
